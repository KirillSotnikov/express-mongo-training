<h1>Card</h1>
  
{{#if courses.length}}
<div id="card">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>{{name}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
</div>
{{else}}
<p>Card is empty</p>
{{/if}}